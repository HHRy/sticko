{{!< default}}
{{#post}}
    <article class="post">
        
        <header class="post-header">
            <h1>{{title}}</h1>
            
            <!-- Post meta -->
            {{> post-meta}}
        </header>

        <div class="post-content">
            {{content}}
        </div>

    </article>

    <!-- Google+ Comments -->
    <section class="comments">
        <p>
            Got a comment on this article that you'd like to share? Get in touch with me
            <a href="http://www.twitter.com/ryanstenhouse" target="_blank">on Twitter</a>.
        </p>
    </section>
{{/post}}
